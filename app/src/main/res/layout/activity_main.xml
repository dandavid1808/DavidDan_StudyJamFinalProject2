<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196f3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.studyjams.ddavid.getbetteratbackgammon.MainActivity">

        <TextView
            android:id="@+id/first_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Hello! This is a short tutorial with five easy steps to be a better player at the backgammon game. First of all do you know the basic rules of the game ? "

            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes_button_view"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:onClick="submitAnswer"
                android:text="yes" />

            <Button
                android:id="@+id/no_button_view"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:onClick="submitAnswer2"
                android:text="no" />
        </LinearLayout>

        <ImageView
            android:id="@+id/table_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rulfig1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rules_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" />

        <Button
            android:id="@+id/lernedRules_button_view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:onClick="submitAnswer3"
            android:text="Yes"
            android:visibility="gone" />

        <TextView
            android:id="@+id/firstExerciseRequest_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/beginExercise_button_view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:onClick="submitAnswer4"
            android:text="Yes"
            android:visibility="gone" />

        <TextView
            android:id="@+id/firstQuestion_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/beginingSituation_Image_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exemple"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/firstAnswer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/firstAnswer_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/firstanswersrc"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/secondAnswer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="gone" />

        <ImageView
            android:id="@+id/secondAnswer_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secondanswersrc"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/thirdAnswer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            />

        <ImageView
            android:id="@+id/thirdAnswer_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forthanswersrc"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/forthAnswer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/forthAnswer_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thirdanswersrc"
            android:visibility="gone" />

        <Button
            android:id="@+id/Finish_button_view"
            android:layout_width="68dp"
            android:layout_height="48dp"
            android:onClick="submitAnswer5"
            android:text="Finish"
            android:visibility="gone" />

        <TextView
            android:id="@+id/congrats_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fail_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/final_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now you should be accomodated with the rules of the game and how to make full use of your points. In the game of backgammon is very important to play a lot find a friend and play with him. And one more thing don't play this game with money cause you win this day next day you lose. Thanks for taking this short tutoriol about how to play the backgammon game. Thank you and have a nice day!"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>